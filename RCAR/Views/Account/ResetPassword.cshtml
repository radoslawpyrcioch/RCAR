@model RCAR.Models.Account.ResetPasswordVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>RCarManager</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="~/css/account.css">
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Zamiana hasła</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        @Html.HiddenFor(m => m.Token)
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation text-danger" })

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Hasło", id = "password" } })
                            @*<span toggle="#password" class="fa fa-eye field-icon toggle-password" id="togglePassword"></span>*@
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation text-danger" })
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @*@Html.LabelFor(m => m.ConfirmPassword)*@
                            @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Potwierdzenie hasła" } })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "field-validation text-danger" })
                        </div>
                        <div class="col text-center">
                            <button type="submit" class="btn btn-success btn-block">Zapisz</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
