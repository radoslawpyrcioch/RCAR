@model RCAR.Models.MemberVM.MemberIndexVM


@{ ViewBag.Title = "Member";}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Strona główna</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Lista członków</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <button type="button" id="openModal" class="btn btn-xs btn-outline-success float-md-right" data-toggle="modal" data-target="#exampleModalCenter">
                            Nowy członek
                        </button>
                        <a class="btn btn-xs btn-outline-success float-md-right" asp-controller="Member" asp-action="Removed">Członkowie nieaktywni</a>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Numer</th>
                                    <th>Imie i Nazwisko</th>
                                    <th>Data przyjęcia</th>
                                    <th>Telefon</th>
                                    <th>Status</th>
                                    <th class="text-warning">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Members)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.MemberId">@item.MemberNo</a>
                                        </td>
                                        <td>@item.FullName</td>
                                        <td>@item.DateJoined.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Phone</td>                                      
                                        <td>@item.Status</td>
                                        <td>
                                            <a class="text-primary" asp-action="Edit" asp-route-id="@item.MemberId">
                                                <i class="fas fa-edit"></i>Edytuj
                                            </a>
                                            <a class="text-success" asp-action="Detail" asp-route-id="@item.MemberId">
                                                <i class="fas fa-bars"></i>Szczegóły
                                            </a>
                                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.MemberId">
                                                <i class="far fa-trash-alt"></i>Zakończ
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><br />

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<body onload="OpenModalWithValidation()">
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLongTitle"><b>Nowy członek</b></h3>
                    <button type="button" onclick="ClearModal()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Create", "Member", FormMethod.Post))
                    {
                        

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" href="/Service/Index">
                                <span class="fa fa-floppy-o text-light"></span>
                                Zapisz
                            </button>
                        </div>
                        <div class="form-group">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script src="~/js/datatables-filters-classic.js"></script>
    }
</body>
