@model RCAR.Models.CarVM.CarDetailVM


<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Strona główna</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Member" asp-action="Index">Lista członków</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Szczegóły samochodu</li>
                </ol>
            </nav><br /><br />
            <a class="btn btn-xs btn-outline-success float-md-right" href="/PaymentRecord/Create/@Model.CarId"> Nowa płatność</a>
            <a class="btn btn-xs btn-outline-success float-md-right" href="/Service/Index/@Model.CarId"> Wróć</a>
            <div class="row">
                <div class="col-lg-6 mb-5 ml-5"><h3><b>Szczegóły samochodu</b></h3></div>
                <div class="col-lg-2 mb-5 ml-5"><h3><b>Płatności</b></h3></div>
            </div>
            <div class="row">
                <div class="col-lg-4 ml-5">
                    <p class="font-weight-normal"><b>Marka: </b>@Model.Brand</p>
                    <p class="font-weight-normal"><b>Model: </b>@Model.Model</p>
                    <p class="font-weight-normal"><b>Data przyjęcia: </b>@Model.ServiceSince.ToString("dd/MM/yyyy")</p>
                    <p class="font-weight-normal"><b>Data zakończenia: </b>@Model.ServiceTo.ToString("dd/MM/yyyy")</p>
                    <p class="font-weight-normal"><b>Opis: </b>@Model.Description</p>
                    <p class="font-weight-normal"><b>Status: </b>@Model.Status</p>
                </div>
                <div class="col-lg-4">
                    <table class="table table-striped">

                        <thead class="text-info">
                            <tr>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Data przyjęcia</th>
                                <th>Data zakończenia</th>
                                <th>Opis</th>
                                <th>Status</th>
                                <th class="text-warning">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PaymentRecords)
                            {

                                <tr>
                                    <td>@Html.DisplayFor(m => item.Name)</td>
                                    <td>@Html.DisplayFor(m => item.Description)</td>
                                    <td>@Html.DisplayFor(m => item.NetAmount)</td>
                                    @*<td>@Html.DisplayFor(m => item.Tax)</td>*@
                                    <td>@Html.DisplayFor(m => item.Discount)</td>
                                    <td>@Html.DisplayFor(m => item.TotalAmount)</td>
                                    <td>@Html.DisplayFor(m => item.Status)</td>
                                    <td>
                                        <div class="dropdown btn-block pull-right">
                                            <button class="btn btn-xs btn-primary btn-block" data-toggle="dropdown">
                                                Opcje
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>@Html.ActionLink("Zapłacone", "Paid", "PaymentRecord", new { id = item.PaymentRecordId })</li>
                                                <li>@Html.ActionLink("Usuń", "Delete", "PaymentRecord", new { id = item.PaymentRecordId }, new { onclick = "return confirm('Czy napewno chcesz usunąc tą płatność?');" })</li>
                                            </ul>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table><br />
                </div>
            </div>
        </div>
    </div>
</div>


