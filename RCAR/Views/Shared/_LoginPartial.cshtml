@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white-50" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Witaj @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        @if (User.Identity.IsAuthenticated)
        {
            <a class="text-center" href="/Account/LogOut"><span class="fa fa-power-off text-danger mr-2"></span>Wyloguj</a>
        }
    </li>
}
else
{
    <li class="nav-item">
        <a class="form-control mr-sm-2" href="/Account/Register">Zarejestruj sie</a>
    </li>
    <li class="nav-item">
        <a class="form-control mr-sm-2" href="/Account/LogIn">Zaloguj sie</a>
    </li>
}
</ul>
